{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "ignorePatterns": ["/tests/", "jest.js"],
    "rules": {
        "no-console": "off",
        "indent": ["error", 4],
        "max-len": ["error", 120],
        "no-unused-vars": "off",
        "no-useless-escape": "off"
    }
}
